<h4><%= t("new_document") %></h4>
<%= form_for(:doc, :url => { :controller => 'docs', :action => 'create' }, :html => { :multipart => true }) do |form| %>

<table class="basic-table">
    <%= render :partial => "form", :locals => { :f => form } %>
  </table>
  <p class="form-buttons">
    <%= button t("update") %>
    <%= t('or') %> <%= link_to t("cancel"), "#", :id => "cancel_link" %>
  </p>
<% end %>


<script type="text/javascript">    
  jQuery('#cancel_link').click(function (event) { 
    jQuery('#new_doc_link').show();
    jQuery('#docs').html('');
  });  
 
</script>
